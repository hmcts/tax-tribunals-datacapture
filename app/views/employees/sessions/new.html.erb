
<% title t('.page_title') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <%= form_for(resource, as: 'employee', url: employee_session_path) do |f| %>
      <%= f.govuk_fieldset legend: { text: t('.heading'), size: 'm' } do %>
        <%= f.govuk_email_field :email, name: 'employee[email]', autocomplete: 'email', spellcheck: 'false', autofocus: true %>
        <%= f.govuk_password_field :password, name: 'employee[password]', autocomplete: 'new-password', spellcheck: 'false' %>
      <% end %>
      <%= f.submit t('helpers.submit.sign_in'), class: 'govuk-button' %>
      <%= link_to 'Cancel', root_path, class: 'govuk-button govuk-!-margin-left-5' %>
    <% end %>
  </div>
  <%= render "employees/shared/get_help", { hide_password_link: false } %>
</div>

