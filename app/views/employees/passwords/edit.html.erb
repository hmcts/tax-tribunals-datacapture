<% title t('.page_title') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary(resource) %>

    <h1 class="govuk-heading-l"><%=t '.heading' %></h1>

    <%= t('users.shared.password_guidelines_html')  %>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :patch }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <div class="govuk-form-group">
          <%= f.govuk_password_field :password, name: 'employee[password]', width: 'two-thirds', autocomplete: 'new-password', spellcheck: 'false', autofocus: true, label: { text: t('.new_password') } %>
          <%= f.govuk_password_field :password_confirmation, name: 'employee[password_confirmation]', width: 'two-thirds', autocomplete: 'off', spellcheck: 'false', label: { text: t('.confirm_new_password') } %>
        </div>
        <%= f.submit t('helpers.submit.change_password'), class: 'govuk-button' %>
        <%= link_to 'Cancel', root_path, class: 'govuk-button govuk-!-margin-left-5' %>
    <% end %>
  </div>
</div>
